<p id="notice"><%= notice %></p>

<h1>Platforms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Note</th>
      <th>Card</th>
      <th>Transfer</th>
      <th>Crypto</th>
      <th>Paypal</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.name %></td>
        <td><%= platform.url %></td>
        <td><%= platform.description %></td>
        <td><%= platform.note %></td>
        <td><%= platform.card %></td>
        <td><%= platform.transfer %></td>
        <td><%= platform.crypto %></td>
        <td><%= platform.paypal %></td>
        <td><%= platform.language %></td>
        <td><%= link_to 'Show', platform %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform', new_platform_path %>
