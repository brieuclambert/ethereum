<%= simple_form_for(@platform) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :description %>
    <%= f.input :note %>
    <%= f.input :card %>
    <%= f.input :transfer %>
    <%= f.input :crypto %>
    <%= f.input :paypal %>
    <%= f.input :language %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
